<div class="content-wrapper">
    <p class="title">{{ i18n 'lblLogin' }}</p>
    <form action="/{{ lang }}/login" method="post">
        <div class="form-group">
            <label>{{ i18n 'lblUsernameEmail' }}</label>
            <input type="text" class="form-control" name="username">
        </div>
        <div class="form-group">
            <label>{{ i18n 'lblPassword' }}</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-info btn-lg pull-right">{{ i18n 'lblLogin' }}</button>
    </form>
    {{#if message}}
        <p class="message">{{ message }}</p>
    {{/if}}
    <a href="/login/register">{{ i18n 'lblRegister' }}</a>
</div>